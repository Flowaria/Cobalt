<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Cobalt.Forms">


    <!--Colors-->
    <SolidColorBrush x:Key="Color_Background_Main" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="Color_UnderScore" Color="#C8C7ED"/>
    <SolidColorBrush x:Key="Color_UnderScore_Selected" Color="#5B5AFF"/>

    <!--Style For Menu-->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource Color_Background_Main}"/>
        <Setter Property="Foreground" Value="#FFC8C8C8"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!--Style For MenuItem-->
    <Style TargetType="MenuItem">
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Green"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>