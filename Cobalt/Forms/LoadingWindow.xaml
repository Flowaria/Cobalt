<Window x:Class="Cobalt.Forms.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cobalt.Forms"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="600" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="{x:Null}">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="536"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image x:Name="image" HorizontalAlignment="Left" Height="536" VerticalAlignment="Top" Width="800" Source="pack://siteoforigin:,,,/Resources/792.png"/>
        </Grid>
        <Grid Grid.Row="1">
            <ProgressBar x:Name="e_bar" Width="800" Height="64"
                   VerticalAlignment="Top" Maximum="100" IsIndeterminate="True"/>
            <Label x:Name="e_label" Content=". . ." Height="32"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontFamily="Malgun Gothic"/>
        </Grid>
    </Grid>

</Window>
